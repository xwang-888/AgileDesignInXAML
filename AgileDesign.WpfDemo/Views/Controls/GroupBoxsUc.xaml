<UserControl x:Class="AgileDesign.WpfDemo.Views.Controls.GroupBoxsUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgileDesign.WpfDemo.Views.Controls"
             xmlns:assist="clr-namespace:AgileDesignThemes.Wpf.Themes.Assist;assembly=AgileDesignThemes.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox 
            Header="GroupBox"
            assist:ControlAssist.ShadowDepth="Depth3"
            BorderThickness="0"
            Foreground="White">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <GroupBox Header="Default GroupBox" Width="300" Height="300">
                </GroupBox>
                <GroupBox Header="Shadow GroupBox" Width="300" Height="300"
                          assist:ControlAssist.ShadowDepth="Depth3"
                          Margin="30 0 0 0"
                          BorderThickness="0">
                </GroupBox>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
