<UserControl x:Class="AgileDesign.WpfDemo.Views.Controls.ProgressBarUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgileDesign.WpfDemo.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center"  HorizontalAlignment="Center">
            <ProgressBar Width="300" Height="20" Value="20" Margin="0 10 0 0" IsIndeterminate="True"/>
            <ProgressBar Width="300" Height="20" Value="40" Margin="0 10 0 0"/>
            <ProgressBar Width="300" Height="20" Value="60" Margin="0 10 0 0"/>
            <ProgressBar Width="300" Height="20" Value="80" Margin="0 10 0 0"/>
            <ProgressBar Width="50" Height="50" IsIndeterminate="True"
                         Style="{StaticResource CircularProgressBar}" Margin="0 10 0 0"/>
            <ProgressBar Width="50" Height="50" Value="50" IsIndeterminate="True"
                         Style="{StaticResource CircularProgressBar}" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</UserControl>
