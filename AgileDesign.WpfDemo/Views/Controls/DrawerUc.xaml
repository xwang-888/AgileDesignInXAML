<UserControl
    x:Class="AgileDesign.WpfDemo.Views.Controls.DrawerUc"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AgileDesign.WpfDemo.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:AgileDesignThemes.Wpf;assembly=AgileDesignThemes.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <wpf:Drawer
            Width="300"
            MinWidth="30"
            HorizontalAlignment="Left"
            Background="LightGray">
            <Button wpf:Drawer.IsSwitchButton="True" />
        </wpf:Drawer>
    </Grid>
</UserControl>
