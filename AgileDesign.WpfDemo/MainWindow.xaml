<Window
    x:Class="AgileDesign.WpfDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:assist="clr-namespace:AgileDesignThemes.Wpf.Themes.Assist;assembly=AgileDesignThemes.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AgileDesign.WpfDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:AgileDesignThemes.Wpf;assembly=AgileDesignThemes.Wpf"
    Title="MainWindow"
    Width="1000"
    Height="600"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <wpf:Drawer
            Width="200"
            HorizontalAlignment="Left"
            Background="#393D49">
            <StackPanel>
                <Button
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Right"
                    wpf:Drawer.IsSwitchButton="True"
                    Background="Transparent"
                    BorderBrush="Transparent">
                    <wpf:PackIcon VerticalAlignment="Center" Kind="AbTesting" />
                </Button>
                <ListBox
                    Background="#393D49"
                    Foreground="White"
                    ItemsSource="{Binding MenuItemList}"
                    SelectedItem="{Binding SelectedMenuItem}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Header}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </wpf:Drawer>
        <ContentControl Grid.Column="1" Content="{Binding SelectedMenuItem.Content}" />

    </Grid>
</Window>
